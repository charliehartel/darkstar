<!DOCTYPE html>
<html>
  <head>

    <title>Game</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/socket.io/socket.io.js"></script>
    <script src='http://code.jquery.com/jquery-1.8.0.min.js' type='text/javascript'></script>
  </head>
  <body>
  <h2>{game.name}</h2>
  <h3>Players</h3>
  <ul>
  {#players}
  	<li>
  		<p>{name}</p>
  	</li>
  {/players}
  </ul>
  <div id="status" game-id="{game.id}" player-id="{player.id}">
  </div>
  <form action='/games/{id}/start' method='post'>
		<hidden type='number' name='game[id]' placeholder='{id}' />
    	<input type='submit' value='Start Game'>
    </form>
 </ul>
 <script>
  console.log("connecting socket");
  var socket = io.connect('http://localhost');
  var gameId = $('#status').attr('game-id');
  var playerId = $('#status').attr('player-id');
  socket.emit('join', {gameId: gameId, playerId: playerId});
  socket.on('message', function (data) {
  	console.log(data);
    $('#status').append('<p>' + data.text + '</p>');
  });
</script>
  </body>
</html>